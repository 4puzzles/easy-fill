{
    "manifest_version": 2,

    "name": "Easy Fill",

    "version": "0.9.1",

    "description": "__MSG_pluginDesc__",

    "icons":
    {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },

    "browser_action": 
    {
        "default_icon": "img/icon.png",
        "default_title": "__MSG_pluginDesc__",
        "default_popup": "popup.html"
    },

    "content_scripts": 
    [
        {
            "matches": ["<all_urls>"],

            "js": [ "js/jquery-3.4.1.min.js", "js/content-script.js"],

            "css": ["css/custom.css"],
 
            "run_at": "document_idle"
        },

        {
            "matches": ["*://*/*.png", "*://*/*.jpg", "*://*/*.gif", "*://*/*.bmp"],
            "js": ["js/show-image-content-size.js"]
        }
    ],

    "permissions":
    [
        "contextMenus", 
        "tabs", 
        "notifications", 
        "webRequest", 
        "webRequestBlocking",
        "storage", 
        "http://*/*", 
        "https://*/*" 
    ],
    
    "web_accessible_resources": ["js/inject.js"],
   
    "homepage_url": "https://github.com/Anonymous-GDBTU/easy-fill",
    
    "options_page": "options.html",
    
    "options_ui":
    {
        "page": "options.html",
        
        "chrome_style": true
    },
    
    "default_locale": "zh_CN"
}