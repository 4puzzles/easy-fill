{
    "manifest_version": 2,

    "name": "Easy Fill",

    "version": "2.0.0",

    "description": "__MSG_pluginDesc__",

    "icons":
    {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },

    "browser_action": 
    {
        "default_icon": "img/icon.png",
        "default_title": "__MSG_pluginDesc__",
        "default_popup": "popup.html"
    },

    "content_scripts": 
    [
        {
            "matches": ["<all_urls>"],
            "js": [ "build/content-script.bundle.js" ],
            "run_at": "document_idle"
        }
    ],

    "permissions":
    [
        "contextMenus", 
        "tabs", 
        "notifications", 
        "webRequest", 
        "webRequestBlocking",
        "storage", 
        "http://*/*", 
        "https://*/*" 
    ],
    
    "web_accessible_resources": ["build/inject.js"],
   
    "homepage_url": "https://github.com/4puzzles/easy-fill",
    
    "options_page": "options.html",
    
    "options_ui":
    {
        "page": "options.html",
        
        "chrome_style": true
    },
    
    "default_locale": "zh_CN"
}